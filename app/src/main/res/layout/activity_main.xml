<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.whip.demointention.MainActivity">

    <EditText
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Entrez un URL..."
        android:text="http://www.google.ca" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/urlSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Aller à cette page" />

    <EditText
        android:id="@+id/streetAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:ems="10"
        android:hint="Entrez une adresse..."
        android:inputType="textPostalAddress"
        android:text="1000 de la Gauchetière" />

    <Button
        android:id="@+id/addressSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Chercher cette adresse" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

    <Button
        android:text="Take a picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cameraButton" />

    <TextView
        android:text="text to share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="1.83"
        android:textSize="26sp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp" />

    <Button
        android:text="Share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shareButton" />

</LinearLayout>
